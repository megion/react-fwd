{
  "compilerOptions": {
    "module": "AMD",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "esModuleInterop": true,
    "target": "es5",
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "jsx": "react-jsx"
  },
  "compileOnSave": false,
  "include": ["src", "typings"],
  "exclude": ["node_modules", "dist"]
}
